#!/bin/bash

ID=$(id -u)

TIMESTAMP=$(date +%F-%H-%M)

LOG_FILE="/tmp/$0-$TIMESTAMP"

R=\e[31m
G=\e[32m
N=\e[0m

validate(){

    if [ $1 -ne 0 ]
    then 
        echo -e "$R ERROR $N"
        exit 1
    else
        echo -e "$G $2 is successful $N"
    fi

}

if [ $ID -ne 0 ]
then 
    echo "ERROR : You are a root user"
    exit 1
else
    echo "you are root user"
fi

#yum install mysql -y &>> $LOG_FILE

echo "Testing colors"

validate $? installation_of_nginx





 